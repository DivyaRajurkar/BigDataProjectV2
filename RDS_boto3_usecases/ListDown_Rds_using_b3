import boto3  # AWS SDK for Python to interact with AWS services like RDS


def list_rds_instances():
    try:
        # âœ… Create an RDS client with AWS credentials  
        # âš ï¸ **Security Note:** Hardcoding credentials is not recommended.  
        #    Use environment variables, AWS Secrets Manager, or IAM roles for better security.  
        rds_client = boto3.client(
            'rds',
            aws_access_key_id='YOUR_ACCESS_KEY',  # ğŸ”’ AWS Access Key (HIDDEN for security)
            aws_secret_access_key='YOUR_SECRET_KEY',  # ğŸ”’ AWS Secret Key (HIDDEN for security)
            region_name='ap-south-1'  # ğŸŒ Specify the AWS region
        )

        # ğŸ“‹ Fetch the list of RDS DB instances
        response = rds_client.describe_db_instances()

        # ğŸ” Loop through each DB instance in the response and print key details
        for db_instance in response['DBInstances']:
            print(f"DB Instance Identifier: {db_instance['DBInstanceIdentifier']}")  # ğŸ·ï¸ Print instance ID
            print(f"DB Engine: {db_instance['Engine']}")  # âš™ï¸ Print database engine type (e.g., MySQL, PostgreSQL)
            print(f"DB Status: {db_instance['DBInstanceStatus']}")  # ğŸ“ˆ Print instance status (e.g., available, creating)
            print("-------------------------------")  # ğŸ”— Separator for readability

    except Exception as e:
        # âš¡ Error handling: If any exception occurs, it will be caught and displayed
        print(f"Error: {e}")  # ğŸ›‘ Print the error message


# ğŸš€ Call the function to list RDS instances
list_rds_instances()
